<div class="page-header">
  <h1>
    Islands
    <a href="/islands/new" class="btn btn-lg btn-success">New Island</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Island name</th>
        <th>Location</th>
        <th>Actions</th>
      </tr>

      <% @islands.each do |island| %>
      <tr>
        <td><%= island.island_name %></td>
        <td><%= island.location %></td>
        <td>
          <a href="/islands/<%= island.id %>" class="btn btn-primary">Show</a>
          <a href="/islands/<%= island.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_island/<%= island.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
