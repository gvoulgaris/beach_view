<div class="page-header">
  <h3>Island #<%= @island.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Island name</dt>
      <dd><%= @island.island_name %></dd>

      <dt>Location</dt>
      <dd><%= @island.location %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/islands" class="btn btn-primary">
        Back
      </a>
      <a href="/islands/<%= @island.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_island/<%= @island.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Island has many beaches -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Beaches
      </li>

      <% @island.beaches.each do |beach| %>
        <li class="list-group-item">
          <a href="/beaches/<%= beach.id %>">
            <%= beach.beach_name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/beaches/<%= beach.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/beaches/<%= beach.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_beach/<%= beach.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
